<html {{ site.language_attributes }} class="no-js">
<head>
    {% block meta %}
        <meta charset="{{ site.charset }}">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta name="viewport" content="height=device-height,width=device-width,initial-scale=1">
        <meta name="description" content="{{ site.description }}">
        <link rel="pingback" href="{{ site.pingback_url }}" />

        {% if favicon %}
            <link rel="icon" type="image/x-icon" href="{{ favicon.src|resize(64,64) }}" />
        {% endif %}

        {% block meta_title %}
            <title>
                {% if wp_title %}
                    {{ wp_title }} - {{ site.name }}
                {% else %}
                    {{ site.name }}
                {% endif %}
            </title>
        {% endblock %}
    {% endblock %}

    {% block stylesheets %}
        {{ function('wp_head') }}
        {% if sharethis %}
            <script type="text/javascript">var switchTo5x=true;</script>
        {% if is_ssl %}
            <script type="text/javascript" id="st_insights_js" src="https://ws.sharethis.com/button/buttons.js"></script>
        {% else %}
            <script type="text/javascript" id="st_insights_js" src="http://w.sharethis.com/button/buttons.js"></script>
        {% endif %}
            <script type="text/javascript">stLight.options({publisher: "{{ sharethis }}", doNotHash: true, doNotCopy: true, hashAddressBar: true});</script>
        {% endif %}
    {% endblock %}
</head>
<body class="{{ body_class }}">

{% block navi %}
    <div data-sticky-container>
        <div class="sticky" data-sticky data-sticky-on="small" data-top-anchor="sticky-start:top" data-margin-top="0" style="width:100%">
            <div class="large-menu show-for-large">
                <div class="row align-center-middle">
                    <div class="column">
                        {% if logo.get_path %}
                            <a href="{{ site.link }}" class="home"><img src="{{ logo.src|resize(0, 64) }}" alt="{{ site.title }}" class="large-logo"></a>
                        {% else %}
                            <a href="{{ site.link }}" class="home">{{ site.title }}</a>
                        {% endif %}
                    </div>
                    <div class="columns shrink">
                        <nav>
                            {% if menu is defined %}
                                {% include 'partials/menu-dropdown.html.twig' %}
                            {% endif %}
                        </nav>
                    </div>
                </div>
            </div>
            <div class="mobile-menu-bar hide-for-large" data-responsive-toggle="small-menu" data-hide-for="large">
                <div class="row">
                    <div class="column">
                        {% if mobile_logo.src %}
                            <a href="{{ site.link }}" class="home"><img src="{{ mobile_logo.src|resize(0, 64) }}" alt="{{ site.title }}" class="small-logo"></a>
                        {% else %}
                            <a href="{{ site.link }}" class="home">{{ site.title }}</a>
                        {% endif %}
                    </div>
                    <div class="shrink column">
                        <a href="#" data-toggle><span class="menu-icon"></span></a>
                    </div>
                </div>
            </div>
            <div class="mobile-menu hide-for-large" id="small-menu" data-toggler>
                {% if menu is defined %}
                    {% include 'partials/menu-accordion.html.twig' %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
{% block header %}
    {% if header is not defined or header %}
        {% include 'partials/header.html.twig' %}
    {% endif %}
{% endblock %}

<div id="sticky-start"></div>

{% block body %}
    <main class="content">
        {% block content %}
            <div class="row column">
                <article>
                    {{ post.content }}
                </article>
            </div>
        {% endblock %}
    </main>
{% endblock %}

{% block scroll %}
    <a class="scroll-top"><i class="fa fa-angle-up"></i></a>
{% endblock %}

{% block footer %}
    {% include 'partials/footer.html.twig' %}
{% endblock %}

{% block contact %}
    <div id="contact" style="display: none;">
        <div class="top row">
            <div class="small-12 columns">
                <h4>Get in Touch! Call 1-866-973-2342</h4>
            </div>
        </div>
        <div class="bottom row">
            <div class="small-12 columns">
                <h6>Weâ€™ll get back to you within 1 business day.</h6>
                {{ contact }}
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ function('wp_footer') }}
{% endblock %}
</body>
</html>
