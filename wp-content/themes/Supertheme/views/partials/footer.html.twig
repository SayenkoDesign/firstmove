<footer class="footer">
    <div class="row align-bottom">
        <div class="small-12 medium-8 large-6 columns medium-order-2">
            <div class="row align-right align-middle connected">
                <div class="shrink column">
                    <h5>Stay Connected!</h5>
                </div>
                <div class="shrink column social">
                    {% if facebook %}
                        <a href="{{ facebook }}" target="_blank">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    {% endif %}
                    {% if twitter %}
                        <a href="{{ twitter }}" target="_blank">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    {% endif %}
                    {% if instagram %}
                        <a href="{{ instagram }}" target="_blank">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-instagram fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    {% endif %}
                </div>
            </div>
            <div class="row subscribe">
                <div class="column">
                    {{ subscribe }}
                </div>
            </div>
        </div>
        <div class="small-12 medium-4 large-6 columns medium-order-1">
            <ul class="vertical medium-horizontal menu">
                {% for link in footer_menu.get_items %}
                    <li class="{{ link.classes | join(' ') }}"><a class="" href="{{ link.get_link }}">{{ link.title }}</a>
                {% endfor %}
            </ul>
            <ul class="vertical large-horizontal menu">
                <li><a href="{{ donate }}" target="_blank"><b>DONATE</b></a></li>
                <li><a href="tel:{{ phone }}">{{ phone }}</a></li>
                <li>{{ address }}</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="column copyright {% if not copyright %}text-center{% endif %}">
            {% if copyright %}
                {{ copyright }}
            {% else %}
                Copyright {{"now"|date('Y')}}
            {% endif %}
        </div>
</footer>